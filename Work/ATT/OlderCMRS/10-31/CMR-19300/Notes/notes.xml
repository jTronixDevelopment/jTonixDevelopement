      <chat-spec>
        <chat-spec-name>
          <string-variable-ref var-id="HSS_Provide_Desk_Tab"/>
        </chat-spec-name>
        <automaton-spec>
          <automaton-data-map>
            <item name="tGuardToken">
              <as-string>
                <object-access deref-expression="_getCookie('TATS-SS-TokenID')" object-id="CM"/>
              </as-string>
            </item>
          </automaton-data-map>
        </automaton-spec>
      </chat-spec>
    </show-proactive>
  </actions>
</business-rule>

